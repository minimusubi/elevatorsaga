{
	"compilerOptions": {
		"module": "ESNext",
		"target": "esnext",

		"strict": true,
		"strictNullChecks": false,
		"noImplicitAny": false,

		"esModuleInterop": true,
		"skipLibCheck": true,

		"outDir": "dist",
		"rootDir": "src",
		"sourceMap": true
	},

	"include": ["src"],
	"exclude": ["**/lib/**"]
}
