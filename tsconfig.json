{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "esnext",

		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,

		"outDir": "dist",
		"rootDir": "src",
		"sourceMap": true,

		"declaration": true,
		"declarationDir": "dist/types"
	},

	"include": ["src"],
	"exclude": ["**/libs/**"]
}
